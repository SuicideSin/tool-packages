# Maintainer: WinterMute <davem@devkitpro.org>
pkgname=devkitA64
pkgver=r8
pkgrel=1
pkgdesc='Toolchain for Nintendo Switch homebrew development'
arch=('any')
url='https://github.com/switchbrew/switch-tools'
license=('GPL')
options=(!strip libtool staticlibs)
source=("https://github.com/devkitPro/buildscripts/releases/download/devkitA64_${pkgver}/devkitA64_${pkgver}-linux.tar.xz" "devkita64.sh")
sha256sums=(
  '8fadc8b9ce267fb278f27abe91e763a87e805ff33005a165bbb8c390b2ef2cbc'
  'd6c2dd23197950991910b67c35a5a28d0087965bdb97ef2a34938d6eaca64f10'
)
groups=('switch-dev')

package() {

  mkdir -p "$pkgdir"/opt/devkitpro
  cp -R devkitA64 "$pkgdir"/opt/devkitpro  
  install -Dm755 devkita64.sh "$pkgdir"/etc/profile.d/devkita64.sh
}
